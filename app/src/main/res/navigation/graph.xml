<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/searchFragment">

    <keep_state_fragment
        android:id="@+id/homeFragment"
        tools:layout="@layout/fragment_home"
        android:name="com.example.navigationtips.fr.main.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </keep_state_fragment>

    <keep_state_fragment
        android:id="@+id/searchFragment"
        tools:layout="@layout/fragment_search"
        android:name="com.example.navigationtips.fr.main.search.SearchFragment"
        android:label="SearchFragment" />

    <keep_state_fragment
        android:id="@+id/account_container_Fragment"
        tools:layout="@layout/fragment_account_container"
        android:name="com.example.navigationtips.fr.main.account.AccountContainer"
        android:label="AccountFragment" >
    </keep_state_fragment>


    <keep_state_fragment
        android:id="@+id/userFragment"
        android:name="com.example.navigationtips.fr.user.UserFragment"
        android:label="UserFragment" />


</navigation>